<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Text?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nao.controllers.controller_Events">
   <center>
      <GridPane hgap="10.0" vgap="10.0" BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="10.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="10.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <ToggleButton fx:id="FeetContactButton" mnemonicParsing="false" onAction="#FeetContact" style="-fx-background-color: Red;" text="Feet Contact" textFill="WHITE" GridPane.columnIndex="1" />
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Bodenkontakt:" />
            <ToggleButton fx:id="SpeechRecognitionButton" mnemonicParsing="false" onAction="#SpeechRecognition" style="-fx-background-color: Red;" text="Speech Recognition" textFill="WHITE" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Spracherkennung:" GridPane.rowIndex="1" />
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Sonar:" GridPane.rowIndex="4" />
            <ToggleButton fx:id="SonarButton" mnemonicParsing="false" onAction="#Sonar" style="-fx-background-color: RED;" text="Sonar" textFill="WHITE" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            <TextField fx:id="VocText" promptText="Vokabel auf Englisch" GridPane.rowIndex="2" />
            <Button mnemonicParsing="false" onAction="#AddVoc" text="Vokabel Hinzufügen" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Button mnemonicParsing="false" onAction="#DeleteVoc" text="Vokabel Löschen" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <ComboBox fx:id="VocList" prefWidth="150.0" GridPane.rowIndex="3" />
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Gesichtserkennung:" GridPane.rowIndex="5" />
            <GridPane GridPane.columnIndex="1" GridPane.rowIndex="5">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <ToggleButton fx:id="FaceDetectionButton" mnemonicParsing="false" onAction="#FaceDetection" style="-fx-background-color: Red;" text="Face Detection" textFill="WHITE" />
                  <ToggleButton fx:id="FaceTrackingButton" mnemonicParsing="false" onAction="#FaceTracking" style="-fx-background-color: Red;" text="Face Tracking" textFill="WHITE" GridPane.columnIndex="1" />
               </children>
            </GridPane>
            <TextField fx:id="FaceName" promptText="Name" GridPane.rowIndex="6" />
            <Button mnemonicParsing="false" onAction="#FaceAdd" text="Gesicht lernen" GridPane.columnIndex="1" GridPane.rowIndex="6" />
            <Button mnemonicParsing="false" onAction="#FaceDelete" text="Gesicht vergessen" GridPane.columnIndex="1" GridPane.rowIndex="7" />
            <ComboBox fx:id="FaceBox" prefWidth="150.0" GridPane.rowIndex="7" />
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </GridPane>
   </center>
</BorderPane>
